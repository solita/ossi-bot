{
    "compilerOptions": {
        "skipLibCheck": true,
        "esModuleInterop": true,
        "incremental": true,
        "composite": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "commonjs",
        "strict": true,
        "alwaysStrict": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist/**/*", "cdk.out"]
}